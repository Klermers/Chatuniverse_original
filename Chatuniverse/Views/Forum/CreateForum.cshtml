
@model Chatuniverse.Models.ForumViewModel

@{
    ViewData["Title"] = "Createforum";
}

<h1>Createforum</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForum" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ForumTitel" class="control-label"></label>
                <input asp-for="ForumTitel" class="form-control" />
                <span asp-validation-for="ForumTitel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desciption" class="control-label"></label>
                <input asp-for="Desciption" class="form-control" />
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

