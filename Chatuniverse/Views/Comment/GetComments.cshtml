@model Chatuniverse.Models.ForumPostViewModel
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "GetComments";
}

<h1>GetComments</h1>
@if (Context.Session.Get("Username") != null)
{
    <a asp-controller="Comment" asp-action="CreateComment">CreateComment</a>
}

@if (Model.Post.Comments != null)
{
    <table class="table table-hover table-bordered" id="PostModel">
        <tbody>
            @foreach (var comment in Model.Post.Comments)
            {
                <tr>
                    <td>
                        @comment.Id
                    </td>

                    <td>
                        @comment.Text
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="Nocomment" method="get">
        <h3>
            There are no Comments for @Model.Post.Posttitel
        </h3>
    </div>
}